{
  "name": "canvas-free-drawing",
  "version": "1.0.3",
  "description": "Simple, lightweight and straightforward package that allows you to free draw on a canvas html element.",
  "main": "./umd/canvas-free-drawing.js",
  "scripts": {
    "rollup": "rollup src/index.js --file umd/canvas-free-drawing.js --format umd --name CanvasFreeDrawing",
    "compile": "babel umd/canvas-free-drawing.js -o dist/canvas-free-drawing.js",
    "minify": "minify umd/canvas-free-drawing.js -o dist/canvas-free-drawing.min.js",
    "prepare": "npm run compile && npm run minify"
  },
  "author": "Federico Moretti",
  "license": "MIT",
  "keywords": [
    "canvas",
    "drawing",
    "free-draw",
    "lightweight",
    "no-dependencies"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-minify": "^0.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.4.3",
    "rollup": "^0.62.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ikos9/canvas-free-drawing.git"
  },
  "engines": {
    "node": ">= 8.0.0"
  }
}
